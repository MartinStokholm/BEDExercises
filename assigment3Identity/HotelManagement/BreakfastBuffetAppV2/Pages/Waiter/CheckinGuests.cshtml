@page
@model BreakfastBuffetAppV2.Pages.Waiter.CheckinGuestsModel
@{
}

<div class="border border-primary rounded d-flex justify-content-center">

    <div class="m-4 flex-column">
        <form method="Post">
            <h5>Roomnumber:</h5>
            <input type="number" asp-for="Input.Roomnumber">

            <h5>Adults:</h5>
            <input type="number" asp-for="Input.Adults" />

            <h5>Children:</h5>
            <input type="number" asp-for="Input.Children" />
        </form>

        <div class="mt-4">
            <button id="reservationSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Save</button>
        </div>
        <div class="text-center my-4">
            <img width="400" src="https://www.koreanair.com/content/dam/koreanair/ko/airport/check-in/pre-check-in/online-check-in/ap-checkin-header-m.png" />
        </div>
    </div>
</div>

